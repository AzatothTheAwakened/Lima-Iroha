    "version": "2.0.0",
    "tasks": [
        {
            "label": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        }
        {
            "label": "testRun",
            "type": "shell",
            "command": "mvn exec:java -Dexec.mainClass=\"io.limasecurityworks.ui.Iroha\" -Dexec.classpathScope=\"test\"",
            "group": "test"
        }
        {
            "label": "Run",
            "type": "shell",
            "command": "mvn exec:java",
            "group": "test"
        }
    ]
}