    "version": "2.0.0",
    "tasks": [
        {
            "label": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        },
        {
            "label": "RunIroha",
            "type": "shell",
            "command": "mvn exec:java -Dexec.mainClass=io.limasecurityworks.ui.Iroha",
            "group": "test"
        },
        {
            "label": "RunFX",
            "type": "shell",
            "command": "mvn exec:java -Dexec.mainClass=io.limasecurityworks.gui.IrohaFX",
            "group": "test"
        },
        {
            "label": "testRunFX",
            "type": "shell",
            "command": "mvn exec:java -Dexec.mainClass=\"io.limasecurityworks.gui.IrohaFX\" -Dexec.classpathScope=\"test\"",
            "group": "test"
        },
        {
            "label": "testRunIroha",
            "type": "shell",
            "command": "mvn exec:java -Dexec.mainClass=\"io.limasecurityworks.ui.Iroha\" -Dexec.classpathScope=\"test\"",
            "group": "test"
        }
    ]
}


